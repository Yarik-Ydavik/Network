<Window x:Class="Network.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="selectedInterfaceComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" SelectionChanged="selectedInterfaceComboBox_SelectionChanged"/>
        <TextBlock x:Name="interfaceInfoTextBlock" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" TextWrapping="Wrap" Width="500"/>
    </Grid>
</Window>
